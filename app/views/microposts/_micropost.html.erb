<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.avatar_small), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t "posted_ago", time_ago: time_ago_in_words(micropost.created_at) %>
     <% if current_user?(micropost.user) %>
      <%= link_to t("delete"), micropost, method: :delete,
                                       data: {confirm: t("you_sure")} %>
    <% end %>
  </span>
</li>
